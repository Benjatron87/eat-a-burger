<div id="header">
    <h1>Burgers!</h1>
    <img src="../public/assets/img/burger.png">
</div>

<div id="on-plate">
    <h2>On Your Plate:</h2>

    <ul>
    {{#each cats}}
        {{#unless sleepy}}
        {{> cats/cat-block sleep=true}}
        {{/unless}}
    {{/each}}
    </ul>
</div>

<div id="devoured">

    <h2>Devoured:</h2>

    <ul>
    {{#each burgers}}
        {{#if devoured}}
        {{> cats/cat-block sleep=false}}
        {{/if}}
    {{/each}}
    </ul>
</div>

<br>

<div id="add">

    <h2>Add a Burger:</h2>
    <form class="create-form">

    <div class="form-group">
        <input type="text" id="ca" name="name">
    </div>

    <button type="submit">Add</button>
    </form>
</div>